<!-- /snippets/pagination.liquid -->

{% comment %}
    Renders a list of pages to paginate

    Accepts:
    - paginate: {Object} link to paginate (required)

    Usage:
    {% render 'pagination', paginate: paginate %}
{% endcomment %}

{% if paginate.pages > 1 %}
  <div class="pagination">
    {% if paginate.previous %}
        <span class="prev-page">{{ '&larr;' | link_to: paginate.previous.url }}</span>
    {% endif %}
    {% for part in paginate.parts %}
        {% if part.is_link %}
            <span class="curr-page">{{ part.title | link_to: part.url }}</span>
        {% else %}
            <span class="current">{{ part.title }}</span>
        {% endif %}
    {% endfor %}
    {% if paginate.next %}
        <span class="next-page">{{ '&rarr;' | link_to: paginate.next.url }}</span>
    {% endif %}
  </div>
{% endif %}
